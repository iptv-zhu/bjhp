<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/vod_line"
        android:layout_width="match_parent"
        android:layout_height="538dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <RadioGroup
                android:id="@+id/vod_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/vod_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/vod_new"
                    android:button="@null" />

                <RadioButton
                    android:id="@+id/vod_hot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/vod_hot"
                    android:button="@null" />
            </RadioGroup>

            <TextView
                android:id="@+id/vod_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="14dp"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </RelativeLayout>


        <GridView
            android:id="@+id/vod_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:horizontalSpacing="10dp"
            android:listSelector="@color/transparent"
            android:numColumns="6"
            android:verticalSpacing="10dp"></GridView>


    </LinearLayout>


</LinearLayout>